- if current_user.admin?
  .toolbar
    = link_to new_user_path, class: 'btn' do
      = fa_icon 'plus'
      Add user

.user-list
  - @users.each do |user|
    .user
      %header
        = image_tag gravatar_url(user.email, 100), class: 'avatar'
        %h3= user.full_name
      
      .body
        .days-counter.available
          %h5 Days available
          %h4= user.days_available

        .days-counter.spent
          %h5 Days spent
          %h4= user.current_year_days_spent
